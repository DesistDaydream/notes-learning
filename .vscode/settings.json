{
    "markdownlint.config": {
        "single-h1": false,
        "no-duplicate-header": false,
        "no-emphasis-as-header": false,
        "no-alt-text": false, // MD045/no-alt-text: 图像应具有替代文本 (alt text)
        // "hard_tab": false
        "no-bare-urls": false, // 让 URL 可以没有 <> 包围
        "no-emphasis-as-heading": false, // 让一行全部加粗的文本可以存在
        "no-inline-html": false, // 允许行内 HTML
        "ol-prefix": false, // 对于不以“1”开头的有序列表会触发此规则。
    },
    "[html]": {
        "editor.formatOnSave": false
    },
}